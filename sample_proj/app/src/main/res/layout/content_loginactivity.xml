<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yy"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="trainedge.sample_proj.loginactivity"
    tools:showIn="@layout/activity_loginactivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0.85"
        android:clipChildren="false"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/ivGoogleSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/gnew" />

        <Button
            android:id="@+id/GBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivGoogleSignIn"
            android:layout_alignStart="@+id/ivGoogleSignIn"
            android:layout_below="@+id/ivGoogleSignIn"
            android:layout_marginTop="13dp"
            android:background="@drawable/twnew" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/GBtn2"
            android:layout_alignStart="@+id/GBtn2"
            android:layout_below="@+id/GBtn2"
            android:layout_marginTop="14dp"
            android:background="@drawable/fbnew" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ivGoogleSignIn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="54dp"
            android:fontFamily="cursive"
            android:text="Sign In With.."
            android:textColor="@android:color/background_light"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:fontFamily="cursive"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="5dp"
            android:text="Ready To Get Started?"
            android:textColor="@android:color/background_light"
            android:textSize="38sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
