<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trainedge.sample_proj.about">

    <RelativeLayout
        android:id="@+id/R_layout"
        android:layout_width="368dp"
        android:layout_height="490dp"
        android:layout_marginBottom="5dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="10dp">

        <TextView
            android:id="@+id/TV1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="GeoFi App for Android Phone"
            android:textSize="22sp"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/TV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TV1"
            android:layout_alignStart="@+id/TV1"
            android:layout_below="@+id/TV1"
            android:fontFamily="serif"
            android:padding="5dp"
            android:text="App Version"
            android:textColor="?android:attr/editTextColor"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <TextView
            android:id="@+id/TV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/TV2"
            android:layout_alignLeft="@+id/TV2"
            android:layout_alignRight="@+id/TV2"
            android:layout_alignStart="@+id/TV2"
            android:layout_below="@+id/TV2"
            android:layout_margin="5dp"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:text="1.1.0.0"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <TextView
            android:id="@+id/TV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/TV2"
            android:layout_alignLeft="@+id/TV3"
            android:layout_alignRight="@+id/TV2"
            android:layout_alignStart="@+id/TV3"
            android:layout_below="@+id/TV3"
            android:text="Developed By:"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/TV5"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TV4"
            android:layout_alignStart="@+id/TV4"
            android:layout_below="@+id/TV4"
            android:text="Abhishek Verma, Anjali Bose, Ankur Singh"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>